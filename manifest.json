{
    "manifest_version": 2,
    "name": "Catching Cera",
    "version": "1.0",
    
    "default_locale": "en",
    "description": "Embeds a Cera to find on some % of pages",
    "icons": {
        "128": "ceraBadge.png"
    },
    
    "browser_action": {
        "default_icon": "ceraBadge.png"
    },
    "content_scripts": [{
           "matches": ["<all_urls>"],
           "js": ["catchingcera.js","jquery-1.12.2.min.js"]
    }],
    "permissions": ["storage","tabs"],
    "background": {
        "scripts": ["background.js"],
        "presistent": false
    },
    
    "web_accessible_resources": ["*.png"]
}
